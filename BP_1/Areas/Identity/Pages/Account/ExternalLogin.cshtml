@page
@model ExternalLoginModel
@{
    ViewData["Title"] = "Registrace";
}

<h1>@ViewData["Title"]</h1>
<h2 id="external-login-title">Přidružte si svůj @Model.ProviderDisplayName účet.</h2>
<hr />

<p id="external-login-description" class="text-info">
    Úspěšně jste se ověřili s <strong>@Model.ProviderDisplayName</strong>.
   Prosím zadejte emailovou adresu pro tuto stránku níže a klikněte na tlačítko "Registrace" pro dokončení přihlášení.
</p>

<div class="row">
    <div class="col-md-4">
        <form asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="email" placeholder="Please enter your email."/>
                <label asp-for="Input.Email" class="form-label"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-primary">Registrace</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
